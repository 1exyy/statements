<style>
    h4 {
        text-align: center;
        font-weight: bold;
    }

    select {
        height: 30px;
        font-size: 18px;
        outline: none;
        border: none;
    }

    input {
        font-family: "Times New Roman", sans-serif;
        text-align: center;
        border: none;
        outline: none;
        border-bottom: 2px solid #212529;
        padding: 0 10px;
        font-size: 23px;
        background: none;
    }

    option {
        font-size: 18px;
    }

    input[type=date]::-webkit-inner-spin-button,
    ::-webkit-calendar-picker-indicator {
        display: none;
    }

    ol {
        list-style: none;
        counter-reset: li;
        padding-top: 2px;
    }

    ol {
        list-style: none;
        counter-reset: li;
        padding-top: 2px;
    }

    li {
        padding-top: 5px;
    }

    li:before {
        counter-increment: li;
        content: counters(li, ".") ". ";
        font-weight: bold;
    }

    input[type='button'] {
        width: 100%;
    }

    .wrapper {
        font-family: "Times New Roman", sans-serif;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 1);
        padding: 100px 50px;
        max-width: 1140px;
        width: 100%;
    }

    .header {
        padding-bottom: 50px;
        font-size: 23px;
    }

    .position {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
        padding: 0 40px;
    }

    .content {
        font-size: 23px;
    }

    .inner-content-text {
        margin-left: 3.5%;
    }

    .passport {
        width: 20%;
    }

    .FIO {
        width: 40%;
    }

    .passport-issued {
        width: 60%;
    }

    .registration {
        width: 80%;
    }


    .numbered-list {
        padding-left: 0;
    }

    .requisites {
        text-align: center;
        font-weight: bold;
    }

    .footer {
        gap: 50px;
        display: flex;
        padding-top: 50px;
        font-size: 20px;
    }

    .footer-left {
        max-width: 505px;
        width: 100%;
        border: 2px solid black;
    }

    .footer-right {
        max-width: 505px;
        width: 100%;
        border: 2px solid black;
    }

    .footer-left-text {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        padding: 10px 50px 50px 10px;
    }

    .footer-left-text strong {
        margin-bottom: -40px;
    }

    .footer-left-text > input {
        width: 70%;
        font-size: 16px;
    }

    .point {
        width: 200px;
    }

    .footer_block_signature {
        display: flex;
        justify-content: space-around;
        margin-top: 100px;
    }

    .statement_footer_signature {
        display: flex;
        align-items: center;
    }

    .statement_footer_signature > input {
        width: 100px;
    }

    .city:before {
        content: "г. ";
    }
</style>

<div class="wrapper">
