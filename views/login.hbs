<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500&display=swap');

    .wrapper {
        user-select: none;
        display: flex;
        align-items: center;
        justify-content: center;
        position: fixed;
        left: 0;
        top: 0;
        width: 100vw;
        height: 100vh;
        background-color: #d4d4d4;
        padding: 10px;
    }

    .login-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 400px;
        width: 100%;
        min-height: 500px;
        background-color: white;
        border-radius: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
    }

    .logo {
        max-width: 200px;
        min-height: 200px;
    }

    .logo img {
        width: 100%;
        height: 100%;
        display: block;
    }

    .login_body {
        display: flex;
        flex-direction: column;
    }

    .login_body__item {
        display: flex;
        flex-direction: column;
        margin-top: 15px;
    }

    .login_body__item input {
        font-family: "Montserrat", sans-serif;
        min-height: 2rem;
        font-size: 1.5rem;
        outline-color: orange;
        padding: 0 5px;
    }

    .btn {
        margin-top: 15px;
    }

    .btn button {
        cursor: pointer;
        font-family: "Montserrat", sans-serif;
        padding: 15px 30px;
        font-weight: bold;
        background-color: #CE6200;
        color: white;
        border-radius: 5px;
        border: none;
    }
</style>

<form action="/admin/auth" method="POST">
    <div class="wrapper">
        <div class="login-form">
            <div class="login_header">
                <div class="logo">
                    <img src="/img/logo.png" alt="">
                </div>
            </div>
            <div class="login_body">
                <div class="login_body__item"><input type="text" placeholder="Логин" name="username"></div>
                <div class="login_body__item"><input type="password" placeholder="Пароль" name="password"></div>
            </div>
            <div class="btn">
                <button type="submit">Войти</button>
            </div>
        </div>
    </div>
</form>
